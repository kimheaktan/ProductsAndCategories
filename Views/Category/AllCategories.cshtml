@model ViewAndCreateCategory

<h3 class="text-center"><a asp-action="AllProducts" asp-controller="Product" class="text-center">Got to Products</a> | <a asp-action="AllCategories" asp-controller="Category" class="text-center text-info">Got to Categories</a></h3>


<div class="container">
  <div class="row">

    <div class="col-sm-3 col-md-6">
        <div class="text-center">
          <h4 class="text-info">Add New Category</h4>
            <form asp-action="CreateCategory" asp-controller="Category" class="form-group">
            <label asp-for="Category.Name" ></label>
            <input asp-for="Category.Name" type="text">

            <input type="submit" class="btn btn-warning">
        </form>
        </div>
    </div>
    
    <div class="col-sm-9 col-md-6">
      <h4 class="text-info">Existing Categories</h4>

        @foreach (Category cat in Model.Categories)
      {
        <a asp-action="ViewSingleCategory" asp-controller="Category"  asp-route-CatName="@cat.Name" asp-route-CatId="@cat.CategoryId"
        >@cat.Name | Category ID: @cat.CategoryId  | Associated Pro: @cat.AssociatedProducts.Count</a><br>
        // Alternatively // <a href="/@cat.Name/@cat.CategoryId">@cat.Name </a> 
      }

    </div>
    @* <div class="w-100"></div> *@

  </div>
</div>